/ {
    // Left encoder configuration
    &encoder0 {
        compatible = "alps,ec11";
        steps = <60>;                  // or 120, depending on your hardware pulses per detent
        triggers-per-rotation = <30>;  // 30 clicks per rotation
        status = "okay";
    };

    // Right encoder configuration
    &encoder1 {
        compatible = "alps,ec11";
        steps = <60>;
        triggers-per-rotation = <30>;
        status = "okay";
    };
};
